{
  "name": "bun-react",
  "description": "Boilerplate for creating a TypeScript React application with Bun.",
  "author": {
    "name": "Achmad F. Ibrahim",
    "email": "acfatah@gmail.com"
  },
  "workspaces": [
    "templates/*"
  ],
  "scripts": {
    "update:all": "bun scripts/update-all.ts",
    "copy-common-to-templates": "bun scripts/copy-common-to-templates.ts",
    "lint": "bun scripts/lint-all.ts",
    "lint:staged": "bun scripts/lint-all.ts --staged",
    "format": "bun scripts/lint-all.ts --format",
    "typecheck": "bun scripts/typecheck-all.ts",
    "typecheck:tsgo": "bun scripts/typecheck-all.ts --tsgo",
    "precommit": "bun run lint:staged"
  },
  "peerDependencies": {
    "@typescript/native-preview": "^7.0.0-dev.20250930.1"
  },
  "devDependencies": {
    "@types/bun": "^1.2.23",
    "@types/common-tags": "^1.8.4",
    "bun-plugin-dts": "^0.3.0",
    "common-tags": "^1.8.2",
    "jiti": "^2.6.0",
    "simple-git-hooks": "^2.13.1"
  },
  "simple-git-hooks": {
    "pre-commit": "bun precommit"
  },
  "trustedDependencies": [
    "@swc/core",
    "@tailwindcss/oxide",
    "esbuild",
    "sharp",
    "simple-git-hooks",
    "unrs-resolver"
  ]
}
